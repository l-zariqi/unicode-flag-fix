{
  "manifest_version": 3,
  "name": "Unicode Flag Fix",
  "version": "1.0",
  "description": "Enables proper display of Unicode flags using the Twemoji set.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["twemoji.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["flags/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}